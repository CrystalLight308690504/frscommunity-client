<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />

    <com.xuexiang.xui.widget.imageview.RadiusImageView
            android:id="@+id/btnAdd"
            android:layout_width="50dp" android:layout_height="50dp"
            android:src="@mipmap/ic_add"
            app:riv_corner_radius="25dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="120dp"
            android:layout_marginRight="50dp"
    />

    <LinearLayout
            android:id="@+id/bottomItem"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/color_white"
            android:padding="@dimen/distance_normal"
            android:gravity="center"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_height="wrap_content"
                android:layout_width="0sp"
                android:visibility="gone"
                android:layout_weight="1">
            <ImageButton
                    android:id="@+id/ibtnHome"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@mipmap/home_home_no_clicked"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/color_black"
                      android:id="@+id/tvHome"
                      android:text="@string/home_home"
                      app:layout_constraintLeft_toLeftOf="@id/ibtnHome"
                      app:layout_constraintRight_toRightOf="@id/ibtnHome"
                      app:layout_constraintTop_toBottomOf="@id/ibtnHome"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_height="wrap_content"
                android:layout_width="0sp"
                android:layout_weight="1">
            <ImageButton
                    android:id="@+id/ibtnBlog"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@mipmap/home_blog_no_clicked"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/color_black"
                      android:id="@+id/tvBlog"
                      android:text="@string/home_blog"
                      app:layout_constraintLeft_toLeftOf="@id/ibtnBlog"
                      app:layout_constraintRight_toRightOf="@id/ibtnBlog"
                      app:layout_constraintTop_toBottomOf="@id/ibtnBlog"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_height="wrap_content"
                android:layout_width="0sp"
                android:layout_weight="1">
            <ImageButton
                    android:id="@+id/ibtnFounded"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@mipmap/home_founded_no_clicked"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/color_black"
                      android:id="@+id/tvFounded"
                      android:text="@string/home_founded"
                      app:layout_constraintLeft_toLeftOf="@id/ibtnFounded"
                      app:layout_constraintRight_toRightOf="@id/ibtnFounded"
                      app:layout_constraintTop_toBottomOf="@id/ibtnFounded"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_height="wrap_content"
                android:layout_width="0sp"
                android:layout_weight="1">
            <ImageButton
                    android:id="@+id/btnHelpNeeded"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@mipmap/home_answer_no_clicked"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/home_answer"
                      android:textColor="@color/color_black"
                      android:id="@+id/tvAnswer"
                      app:layout_constraintLeft_toLeftOf="@id/btnHelpNeeded"
                      app:layout_constraintRight_toRightOf="@id/btnHelpNeeded"
                      app:layout_constraintTop_toBottomOf="@id/btnHelpNeeded"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_height="wrap_content"
                android:layout_width="0sp"
                android:layout_weight="1">
            <ImageButton
                    android:id="@+id/ibtnSelf"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@mipmap/ic_home_self_no_clicked"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/color_black"
                      android:text="@string/home_self"
                      android:id="@+id/tvSelf"
                      app:layout_constraintLeft_toLeftOf="@id/ibtnSelf"
                      app:layout_constraintRight_toRightOf="@id/ibtnSelf"
                      app:layout_constraintTop_toBottomOf="@id/ibtnSelf"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>