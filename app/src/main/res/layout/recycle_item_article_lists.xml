<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@drawable/bkd_round_solid_while_stroke_bottom_right_bule_gray"
                                                   android:layout_marginBottom="@dimen/margin_small"
                                                   android:padding="@dimen/margin_small">
    <com.qmuiteam.qmui.widget.QMUIRadiusImageView2
            android:id="@+id/profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@mipmap/icon_application"
            app:qmui_corner_radius="20dp"
    />

    <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:text="6456"
            android:textColor="@color/default_displayed_text_gray"
            app:layout_constraintLeft_toRightOf="@id/profile"
            app:layout_constraintTop_toTopOf="@id/profile"/>

    <TextView
            android:id="@+id/put_date"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:text="2012-10-5"
            android:textColor="@color/default_displayed_text_gray"
            android:layout_marginRight="@dimen/margin_small"
            app:layout_constraintRight_toLeftOf="@id/articleType"
            app:layout_constraintTop_toTopOf="@id/profile"/>
    <TextView
            android:id="@+id/articleType"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:text="发布类型"
            android:textColor="@color/default_displayed_text_gray"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/profile"/>
    <TextView
            android:id="@+id/article_title"
            android:maxEms="15"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="title"
            android:textColor="@color/default_displayed_title"
            android:textSize="15dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/margin_normal"
            app:layout_constraintTop_toBottomOf="@id/profile"
            tools:ignore="MissingConstraints"/>
    <TextView
            android:id="@+id/article_content"
            android:maxEms="50"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
            android:layout_width="280dp" android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/article_title"
            android:textColor="@color/default_displayed_text_gray"/>
    <com.qmuiteam.qmui.widget.QMUIRadiusImageView2
            android:id="@+id/image1"
            android:src="@mipmap/icon_application"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/article_title"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>