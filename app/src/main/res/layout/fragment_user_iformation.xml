<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".view.fragment.UserInformationFragment">

    <ImageView
            android:id="@+id/user_information_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scaleType="fitStart"
            android:src="@drawable/user_background"

    />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/half_top"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
    >
        <FrameLayout
                android:id="@+id/cover_background"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/color_white"
                android:layout_width="match_parent" android:layout_height="160dp"
        />
        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                android:id="@+id/user_profile"
                app:qmui_corner_radius="40dp"
                android:layout_width="64dp" android:layout_height="64dp"
                android:src="@mipmap/icon_application"
                tools:layout_editor_absoluteX="55dp" tools:layout_editor_absoluteY="147dp"
                tools:ignore="MissingConstraints"/>
        <TextView
                android:id="@+id/user_name"
                android:text="crystallight"
                android:textColor="@color/default_displayed_font_black_color"
                app:layout_constraintTop_toBottomOf="@id/user_profile"
                app:layout_constraintLeft_toLeftOf="@id/user_profile"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
        />
        <TextView
                android:id="@+id/user_gender"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="男"
                app:layout_constraintLeft_toRightOf="@id/user_name"
                app:layout_constraintTop_toTopOf="@id/user_name"
                android:layout_marginLeft="@dimen/margin_double_normal"
        />
        <TextView
                android:id="@+id/user_self_introduce"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="我是个工程师"
                app:layout_constraintLeft_toLeftOf="@id/user_profile"
                app:layout_constraintTop_toBottomOf="@id/user_name"
                android:layout_marginTop="@dimen/margin_normal"
        />
        <TextView
                android:id="@+id/followers"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="关注：50"
                android:textColor="@color/default_displayed_font_black_color"
                app:layout_constraintLeft_toLeftOf="@id/user_profile"
                app:layout_constraintTop_toBottomOf="@id/user_self_introduce"
                android:layout_marginTop="@dimen/margin_normal"
        />
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="粉丝：50"
                android:textColor="@color/default_displayed_font_black_color"
                app:layout_constraintStart_toEndOf="@+id/followers"
                app:layout_constraintBottom_toBottomOf="@+id/followers"
                android:layout_marginLeft="@dimen/margin_big"
        />

        <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                android:text="关注"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rb_radius="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/user_profile"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:layout_constraintTop_toBottomOf="@id/half_top"
            app:layout_constraintLeft_toLeftOf="parent"
            android:padding="@dimen/margin_small"
    >
        <TableLayout
                android:id="@+id/tab_s"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="280dp" android:layout_height="32dp"/>

        <ImageView
                android:id="@+id/search_article"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_width="26dp" android:layout_height="26dp"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/search"
                app:layout_constraintTop_toTopOf="parent"
        />

        <androidx.viewpager.widget.ViewPager
                android:layout_marginTop="@dimen/margin_small"
                app:layout_constraintTop_toBottomOf="@+id/tab_s"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent" android:layout_height="360dp"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>