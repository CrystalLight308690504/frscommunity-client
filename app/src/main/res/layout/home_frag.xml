<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView android:layout_width="350dp" android:layout_height="38dp"
              app:layout_constraintTop_toBottomOf="@id/home_top_bar_background"
              app:layout_constraintLeft_toLeftOf="parent"
              android:background="@drawable/home_search_background"
              android:id="@+id/home_search_input_box"
    />
    <ImageButton android:layout_width="32dp" android:layout_height="32dp"
                 app:layout_constraintLeft_toRightOf="@id/home_search_input_box"
                 app:layout_constraintRight_toRightOf="parent"
                 app:layout_constraintBottom_toBottomOf="@id/home_search_input_box"
                 android:src="@drawable/scan"
                 android:id="@+id/imageButton"/>
    <com.qmuiteam.qmui.widget.tab.QMUITabSegment
            android:id="@+id/tabs"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_search_input_box"
            android:layout_gravity="bottom"
            android:textSize="12sp"
            android:background="@color/btn_filled_blue_bg_normal"
            app:qmui_tab_icon_position="top"
            app:qmui_tab_selected_text_size="16sp"
            app:qmui_tab_normal_text_size="14sp"
            app:qmui_topDividerHeight="1px"
            app:qmui_topDividerColor="?attr/qmui_skin_support_color_separator"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

    <com.qmuiteam.qmui.layout.QMUIFrameLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tabs" android:id="@+id/QMUIFrameLayout">
        <com.qmuiteam.qmui.widget.QMUIViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/qmui_config_color_75_pure_black"
        />
    </com.qmuiteam.qmui.layout.QMUIFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>