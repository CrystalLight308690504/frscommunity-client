<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   tools:context=".view.fragment.EditMyDescriptionFragment">

    <include layout="@layout/application_logo"
             android:id="@+id/logl"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@mipmap/icon_application"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintRight_toRightOf="parent"
             android:layout_marginTop="80dp"
    />

    <com.google.android.material.textfield.TextInputEditText android:layout_width="match_parent"
                                                             android:layout_height="wrap_content"
                                                            app:layout_constraintTop_toBottomOf="@id/logl"
                                                             android:layout_marginTop="@dimen/distance_normal"
                                                             android:hint="编辑你的介绍"
                                                             android:maxLength="100"
                                                             android:id="@+id/ieDescription"
    />
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="确认修改"
            android:background="@drawable/bkd_btn_round_enable_state_blue_to_grey"
            android:layout_marginRight="@dimen/distance_max5"
            android:layout_marginLeft="@dimen/distance_max5"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/distance_max5"
            android:id="@+id/btnPosition"
            />

</androidx.constraintlayout.widget.ConstraintLayout>