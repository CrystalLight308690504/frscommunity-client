<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   tools:context=".view.fragment.EditUserProfileFragment">

    <com.xuexiang.xui.widget.imageview.RadiusImageView android:layout_width="120dp" android:layout_height="120dp"
                                                       android:src="@mipmap/icon_application"
                                                       app:layout_constraintLeft_toLeftOf="parent"
                                                       app:layout_constraintRight_toRightOf="parent"
                                                       app:layout_constraintTop_toTopOf="parent"
                                                       app:riv_corner_radius="60dp"
                                                       android:layout_marginTop="180dp"
                                                       android:id="@+id/icLog"
                                                       />
<Button android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="@drawable/bkd_btn_round_state_blue_to_grey"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/distance_max5"
        android:layout_marginRight="@dimen/distance_max5"
        app:layout_constraintTop_toBottomOf="@id/icLog"
        android:layout_marginTop="@dimen/distance_max5"
        android:text="确认修改"
        android:id="@+id/btnPosition"
        />

</androidx.constraintlayout.widget.ConstraintLayout>