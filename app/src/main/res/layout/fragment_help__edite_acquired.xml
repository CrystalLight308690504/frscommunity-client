<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:paddingTop="@dimen/margin_normal"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   tools:context=".view.fragment.EditeHelpAcquiredFragment">


    <ImageView
            android:id="@+id/btn_back"
            android:layout_margin="@dimen/margin_small"
            android:layout_width="@dimen/default_btn_back_size" android:layout_height="@dimen/default_btn_back_size"
            android:src="@drawable/icon_top_bar_back_blue"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="16dp"
            android:text="求助问答"
            app:layout_constraintTop_toTopOf="@id/btn_back"
            app:layout_constraintBottom_toBottomOf="@id/btn_back"
            android:textColor="@color/default_displayed_text_black"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:layout_margin="@dimen/margin_small"
            android:layout_width="wrap_content" android:layout_height="32dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_back"
            app:layout_constraintBottom_toBottomOf="@id/btn_back"
            android:background="@drawable/bkd_btn_back_round"
            android:text="发送"
    />
    <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/titleAcquired"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="100"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:hint="求解答标题"
            app:layout_constraintTop_toBottomOf="@id/btn_back"
    />

    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="533dp"
            app:layout_constraintTop_toBottomOf="@id/titleAcquired"
            android:gravity="start"
            android:hint="具体描述"
            android:inputType="textMultiLine"
            tools:layout_editor_absoluteX="5dp"/>
    <LinearLayout
            android:id="@+id/s1"
            android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:padding="@dimen/margin_small"
                  app:layout_constraintBottom_toBottomOf="parent"
android:background="@drawable/bkd_top_stricke_gray"
                  >
        <ImageView android:layout_width="@dimen/default_btn_icon_size" android:layout_height="@dimen/default_btn_icon_size"
                   android:src="@drawable/ic_smile"
                   android:layout_marginRight="@dimen/margin_small"
                   />
        <ImageView android:layout_width="@dimen/default_btn_icon_size" android:layout_height="@dimen/default_btn_icon_size"
                   android:src="@drawable/ic_pictures"
                   android:layout_marginRight="@dimen/margin_small"
                   />

    </LinearLayout>
    


